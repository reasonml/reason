  "ocaml" {>= "4.05.0"}
  "ocamlfind" {build & >= "1.6.1"}
  "ocamlbuild"
]
build: ["ocaml" "pkg/pkg.ml" "build" "--pkg-name" name "--dev-pkg" "%{dev}%"]
